{
    "openapi": "3.0.0",
    "info": {
        "title": "Demo Quizzes",
        "description": "Quizzes API",
        "contact": {
            "email": "huan.ld@neo-lab.vn"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Quizzes API"
        }
    ],
    "paths": {
        "/api/users/login": {
            "post": {
                "tags": [
                    "login"
                ],
                "summary": "Login User",
                "operationId": "doLogin",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "405": {
                        "description": "Invalid input"
                    },
                    "200": {
                        "description": "Login Successfully"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}